{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "name": { "type": "string" },
      "protocols": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "id": { "type": "string" },
            "logo": { "type": "string" },
            "name": { "type": "string" },
            "url": { "type": "string", "format": "uri" }
          },
          "required": ["description", "id", "logo", "name", "url"]
        }
      },
      "types": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "name": { "type": "string" }
          },
          "required": ["description", "name"]
        }
      },
      "gauges": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "beraRewardsVault": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
            "lpTokenAddress": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
            "logo": { "type": "string" },
            "name": { "type": "string" },
            "protocol": { "type": "string" },
            "types": {
              "type": "array",
              "items": { "type": "string" }
            },
            "underlyingTokens": {
              "type": "array",
              "items": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" }
            },
            "url": { "type": "string", "format": "uri" }
          },
          "required": ["beraRewardsVault", "lpTokenAddress", "name", "protocol", "types", "underlyingTokens", "url"]
        }
      },
      "version": {
        "type": "object",
        "properties": {
          "major": { "type": "integer" },
          "minor": { "type": "integer" },
          "patch": { "type": "integer" }
        },
        "required": ["major", "minor", "patch"]
      }
    },
    "required": ["name", "protocols", "types", "gauges", "version"]
  }